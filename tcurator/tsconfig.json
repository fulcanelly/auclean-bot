{
  "compilerOptions": {
    "target": "ES2022",
    "noImplicitAny": false,
    "lib": [
      "esnext",
      "es2015"
    ],
    "skipLibCheck": true,
    "jsx": "preserve",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "jest"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "src/next.ts"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"

  ]
}
